data, response, err := apiInstance.PutAlertingInteractionstatsRule(ruleId, body, expand)
if err != nil {
	fmt.Printf("Error calling PutAlertingInteractionstatsRule: %v\n", err)
} else {
	fmt.Printf("Response:\n  Success: %v\n  Status code: %v\n  Correlation ID: %v\n  Body: %v\n", response.IsSuccess, response.StatusCode, response.CorrelationID, data.String())
}