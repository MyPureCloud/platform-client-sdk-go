config := platformclientv2.GetDefaultConfiguration()
config.BasePath = ""    // expected format: https://api.mypurecloud.com
config.AccessToken = "your_access_token" // or use AuthorizeClientCredentials(...), AuthorizeCodeGrant(...) or AuthorizePKCEGrant(...)

apiInstance := platformclientv2.NewSpeechTextAnalyticsApiWithConfig(config)

var pageSize int // The page size for the listing. The max that will be returned is 50.
var pageNumber int // The page number for the listing
var name string // The category name filter applied to the listing
var sortOrder string // The sort order for the listing
var sortBy string // The field to sort by for the listing
var ids []string // Comma separated Category IDs to filter by. Cannot be used with other filters. Maximum of 50 IDs allowed.
// Get the list of Speech and Text Analytics categories
data, response, err := apiInstance.GetSpeechandtextanalyticsCategories(pageSize, pageNumber, name, sortOrder, sortBy, ids)
if err != nil {
	fmt.Printf("Error calling GetSpeechandtextanalyticsCategories: %v\n", err)
} else {
	fmt.Printf("Response:\n  Success: %v\n  Status code: %v\n  Correlation ID: %v\n  Body: %v\n", response.IsSuccess, response.StatusCode, response.CorrelationID, data.String())
}